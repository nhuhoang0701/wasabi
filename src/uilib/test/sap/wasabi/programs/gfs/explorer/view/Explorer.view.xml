<mvc:View
    height="100%"
    controllerName="programs.gfs.explorer.controller.Page"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    id="ConditionView"
    >
  <m:Page showHeader="false">
    <m:Tree
        mode="MultiSelect"
        id="Tree"
        itemPress="onPress"
        items="{/items}">
      <m:headerToolbar>
        <m:OverflowToolbar>
          <m:content>
            <m:Title text="Google Drive" level="H2" />
            <m:ToolbarSpacer />
            <m:Button
                text="Copy to vfs"
                tooltip="Copy selected files from google drive to vfs"
                press="copy2vfs"
                />
          </m:content>
        </m:OverflowToolbar>
      </m:headerToolbar>
      <m:StandardTreeItem
          title="{name}"
          type="Active"
          app:ln="{webViewLink}"
          />
    </m:Tree>
  </m:Page>
</mvc:View>
