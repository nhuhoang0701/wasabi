<mvc:View
    controllerName="sap.wasabi.rsbitt.controller.App"
    xmlns:l="sap.ui.layout"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m">
  <m:Panel
      expandable="true"
      width="auto"
      class="sapUiResponsiveMargin"
      >
    <m:headerToolbar>
      <m:OverflowToolbar
          style="Clear"
          >
        <m:Title
            text="{i18n>RequestBody}"
            />
        <m:ToolbarSpacer />
        <m:Button
            icon="sap-icon://settings"
            tooltip="{i18n>serverInfo}"
            press="serverInfo"
            />
        <m:Button
            icon="sap-icon://add-process"
            tooltip="{i18n>getResponse}"
            press="getResponse"
            />
      </m:OverflowToolbar>
    </m:headerToolbar>
    <m:content>
      <ce:CodeEditor
          type="json"
          value="{/requestBody}"
          height="500px" />
    </m:content>
  </m:Panel>
  <m:Panel
      id="responseBody"
      expandable="true"
      expand="onExpand"
      width="auto"
      headerText="{i18n>ResponseBody}"
      class="sapUiResponsiveMargin">
    <m:content>
      <ce:CodeEditor
          type="json"
          value="{/responseBody}"
          height="500px" />
    </m:content>
  </m:Panel>
</mvc:View>
